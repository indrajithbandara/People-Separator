@{
    ViewBag.Title = "Settings";
}

<h2>Settings</h2>


<form method="post" action="/PeopleSeparator/">
	<p>There are a total of @ViewBag.Total participants.</p>

	<p>
		Do you want mixed gender groups, or single ?!
	</p>
	<select name="type">
		<option>Single</option>
		<option>Mixed</option>
	</select>

	<p>Add how many groups do you want:</p>
	<ol id="groups">
		<li><input type="text" class="group" value = "0" /></li>
	</ol>

	

	<p>
		<a href="#" id="add-group">Add Group</a>
	</p>
	<p id="p-remaining">
		Add <span class="number">@ViewBag.Total</span>  persons to groups.
	</p>
	<p id="p-toomuch" style="display:none">
		Remove <span class="number"></span> persons from groups.
	</p>
	<p id="p-good" style="display:none">
		You are good to go.
	</p>
	
	<p>
		<input type="submit" value="Next" disabled="disabled"/>
	</p>
</form>

<p>
	<i>It will take a while for the next page to fetch data about users.</i>
</p>
		
<script>
	totalPersons = @ViewBag.Total;
</script>
<script src="@Url.Content("~/Scripts/pipsep/index.js")" type="text/javascript"></script>
