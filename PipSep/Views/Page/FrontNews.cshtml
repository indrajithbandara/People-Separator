@model IEnumerable<PipSep.Models.Page>
@if (Model.Count() > 0)
{
<section id="news">
<h1>News</h1>
<ul>
@foreach (var post in Model)
{
        <li>
            <a href="@Url.Action("View", "Page", new { id = post.Id })"><b>@post.Title</b > - <i><time datetime="@post.DateCreated.ToString()" pubdate="pubdate" >@post.DateCreated.ToShortDateString()</time></i></a>
			<p>
				@if(@post.Content.Length > 300){
					@Html.Raw(post.Content.Substring(0, 300));
				}
				else{
					@Html.Raw(post.Content);
				}
			</p>
        </li>
}
</ul>
</section>
}

<style>
i{
	font-size:80%;
}
</style>