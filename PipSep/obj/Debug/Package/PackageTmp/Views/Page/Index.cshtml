@model IEnumerable<PipSep.Models.Page>

@{
    ViewBag.Title = "Index";
}

<h2>Pages Administration</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Appears in menu
        </th>
        <th>
            Appears in blog
        </th>
        <th>
            Comments
        </th>
        <th>
            Author
        </th>
        <th>
            Sticky
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsMenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsBlog)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsComment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsSticky)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
			@Html.ActionLink("View", "View", new { id = item.Id })
        </td>
    </tr>
}

</table>
