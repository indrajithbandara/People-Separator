@{
    ViewBag.Title = "IndexContent";
	ViewBag.TinyMCE = true;
}

<link rel="stylesheet" href="@Url.Content("~/Content/front.css")">
@{Html.RenderPartial("WysiwygEditor", new ViewDataDictionary { { "TextBox", "IndexContent" } });}

<h2>IndexContent</h2>

@using (Html.BeginForm())
{
	<fieldset>
		<legend>Index Content Form</legend>

		<div class="editor-label">
            @Html.Label("Are registrations allowed")
        </div>
        <div class="editor-field">
            @Html.CheckBox("AreRegistrationsAllowed", (bool)ViewBag.AreRegistrationsAllowed)
        </div>

		<div class="editor-label">
            @Html.Label("Index page content")
        </div>
        <div class="editor-field">
            @Html.TextArea("IndexContent", Html.Raw((string)ViewBag.IndexContent))
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
	</fieldset>
}